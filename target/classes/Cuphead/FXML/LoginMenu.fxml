<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<BorderPane fx:id="borderPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Cuphead.View.LoginMenu"
            prefHeight="720.0" prefWidth="1280.0" stylesheets="@../CSS/style.css">
    <center>
        <VBox  spacing="10" alignment="CENTER" maxWidth="400">
            <Text fx:id="title">CupHead</Text>
            <Label>Username</Label>
            <TextField fx:id="username" promptText="Enter your username" />
            <Label>Password</Label>
            <TextField fx:id="password" promptText="Enter your password"/>
            <Button styleClass="primary-btn" text="Register" onMouseClicked="#register"/>
            <Button styleClass="secondary-btn" text="Login" onMouseClicked="#login"/>
            <Text fx:id="warning"></Text>
        </VBox>
    </center>

    <bottom>
        <Button styleClass="primary-btn" alignment="CENTER" text="Play as guest" onMouseClicked="#playAsGuest"/>
    </bottom>


</BorderPane>
